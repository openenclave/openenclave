enclave {
    include "fcntl.h"
    include "sys/types.h"
    include "sys/stat.h"
    include "myfileio.h"

    struct mbed_args {
        int skipped;
        int total;
    };

    enum string_limit {
        STRLEN = 1024
    };

    trusted {
        public int test(
            [in, string] const char* in_testname,
            [out, size=1024] char* out_testname,
            [out] mbed_args* args);
    };

    untrusted {
        int mbed_test_open(
            [in, string] const char* path,
            int flags,
            unsigned mode);

        ssize_t mbed_test_read(
            int fd,
            [out, size=buf_len] char* buf,
            size_t buf_len);

        int mbed_test_close(
            int fd);

        void ocall_exit(
            int arg);
    };
};
